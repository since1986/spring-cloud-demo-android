<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test1Fragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_time_fragment_test1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_2_fragment_test1"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_2_fragment_test1"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_1_fragment_test1"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal_1_fragment_test1"
            tools:text="1234567890" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical_1_fragment_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical_2_fragment_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_horizontal_1_fragment_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.33" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_horizontal_2_fragment_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.66" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
