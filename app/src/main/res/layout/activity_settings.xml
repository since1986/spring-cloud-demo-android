<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFEFEF"
    tools:context=".SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_activity_settings"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.Toolbar.Popup"
            app:theme="@style/AppTheme.Toolbar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/linear_layout_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/app_bar_layout_activity_settings"
        android:layout_marginTop="8dp"
        android:background="#FFFFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="@string/text_current_version" />

        <TextView
            android:id="@+id/text_view_version_activity_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            tools:text="1.0.0" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_logout_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/linear_layout_activity_settings"
        android:layout_marginTop="8dp"
        android:background="#FFFFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/text_logout"
        android:textColor="#FFE96D5B"
        android:textStyle="bold" />
</RelativeLayout>
